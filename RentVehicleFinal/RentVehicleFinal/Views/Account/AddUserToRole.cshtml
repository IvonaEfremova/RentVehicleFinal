@model RentVehicleFinal.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<h2>Додади пермисии на корисник</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.DropDownListFor(m=>m.Email, new SelectList(Model.users), new { @class= "form-control"})
        @Html.HiddenFor(model => model.selectedEmail)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Role)
        @Html.DropDownListFor(m => m.Role, new SelectList(Model.roles), new { @class = "form-control" })
        @Html.HiddenFor(model => model.selectedRole)
    </div>

    <button class="btn btn-default" type="submit">Зачувај</button>
    @*@Html.ActionLink("Prodolzi", "Index", "Home")*@
}

